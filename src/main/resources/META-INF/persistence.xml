<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="lab1">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.example.model.admin.AdminLoginInformation</class>
        <class>org.example.model.player.PlayerLoginInformation</class>
        <class>org.example.model.admin.Administrator</class>
        <class>org.example.model.User</class>
        <class>org.example.model.player.Player</class>
        <class>org.example.model.Team</class>
        <class>org.example.model.Tournament</class>
        <class>org.example.model.Ranking</class>
        <class>org.example.model.Match.Match</class>
        <class>org.example.model.shop.Article</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbc.JDBCDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:hsql://localhost/;shutdown=true"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
